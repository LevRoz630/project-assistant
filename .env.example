# Application Settings
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Microsoft Azure AD / OAuth
# Create an app registration at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# AI Configuration
# At least one of these is required
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key  # Get from https://makersuite.google.com/app/apikey

# LLM Settings
DEFAULT_LLM_PROVIDER=anthropic  # Options: anthropic, openai, google
DEFAULT_MODEL=claude-sonnet-4-20250514

# OneDrive Settings
ONEDRIVE_BASE_FOLDER=PersonalAI

# Vector Store
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Telegram (get credentials from https://my.telegram.org)
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_PATH=./data/telegram_session

# GitHub (get token from https://github.com/settings/tokens)
# Required scopes: repo, notifications, read:user
GITHUB_TOKEN=ghp_your-token-here
GITHUB_USERNAME=your-username

# ArXiv Digest Settings
ARXIV_CATEGORIES=cs.AI,cs.CL,cs.LG,q-fin.ST,stat.ML
ARXIV_INTERESTS=AI agents, LLMs, NLP, quantitative finance, ML for trading
ARXIV_SCHEDULE_HOUR=6  # UTC hour to run daily (6 AM UTC)
ARXIV_MAX_PAPERS=50
ARXIV_TOP_N=10
ARXIV_LLM_PROVIDER=anthropic  # Options: anthropic, openai, google

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
